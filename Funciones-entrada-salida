#include <stdio.h>
#include <locale.h>

main() {
	setlocale(LC_ALL, "SPANISH");
	char nombre[50];
	char domicilio[100];

	printf("funciones de entrada y salida\n");

	printf("funcion putchar\n");
	printf("La funcion putchar escribe un unico caracter en la salida estandar\n\n");

	putchar('L');
	putchar(32);
	putchar('L');
	putchar('\n');
	putchar('L');
	putchar(92);
	putchar(64);
	putchar(254);
	putchar(33);
	putchar(36);

	printf("\nfuncion()\n");
	printf(" Inprime una caracteristica en la salida estandar y produce un salto de linea\n\n");

	puts("programacion");
	puts("en lenguaje c");

	puts("escribe tu nombre");
	gets(nombre);
	printf("Tu nombre es: %s \n", nombre);

	printf("\n\nFuncion printf()\n");
	printf("Ejemplos:\n\n");

	printf("cadena");

	printf("cadena");
	printf("segunda");

	printf("cadena\n");
	printf("segunda");

	printf("primera cadena" "segunda cadena");
	printf("esto es \"extraÃ±o\"");

	printf("C:\\Documents\n");

	printf("\n\nFuncion fgets()\n");
	printf("La funcion putchar un unico caracter en la salida estandar");

	printf("\n\nIngresa domicilio\n");
	fgets(domicilio, 100, stdin);

	printf("\n\n tu domicilio es: %s\n",domicilio);



	getch(); //pausa en el sistema
	return 0; //finaliza el programa
} 
