	int cantidadpastelitos;
  int preciopastelitos;
  int cantidadcafe;
  int preciocafe;
  int cantidadchicles;
  int preciochicles;

	printf("Operadores y expresiones\n");

	a=10;
	printf("El valor de a es: %d\n", a);

    a=15;
	printf("El valor de a es: %d\n", a);

    a=30;
	printf("El valor de a es: %d\n", a);


	printf("Asignacion multiple:\n");

	a=b=c=10;
	printf("el valor de a es: %d\n", a);

    printf("Operadores aritmeticos\n");
    printf("Suma\n\n");

    a=10;
