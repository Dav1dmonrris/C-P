    resultado=a+b;
    printf("El resultado de %d+%d=%d \n", a, b, resultado);


     resultado=a*b;
    printf("El resultado de %d*%d=%d \n", a, b, resultado);


     resultado=a/b;
    printf("El resultado de %d/%d=%d \n", a, b, resultado);


    //modulo

      resultado=a%b;
    printf("El resultado de %d%%%d=%d \n\n", a, b, resultado);

