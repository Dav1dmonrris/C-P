//tablas.h

#include <stdio.h>
#include <locale.h>

int main(int argc, char const *argv[])
{
	setlocale(LC_ALL, "spanish");
	int tabla, i ;

	printf("TABLAS DE MULTIPLICAR\n");

	printf("Indica la tabla que desea mostrar\n");
	scanf("%d", &tabla);

	printf("Tabla del %d\n", tabla);
	printf("---------\n");

	for (i = 1; i < 10; ++i)
	{
		printf("la tabla %d x %d = %d\n", tabla, i, tabla*i );
	}
	printf("--------\n");
	

	getch();
	return 0;
}
